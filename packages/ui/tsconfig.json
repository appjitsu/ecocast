{
  "extends": "@repo/typescript-config/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["react", "react-dom"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
