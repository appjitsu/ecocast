{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2022"],
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "sourceMap": true
  }
}
