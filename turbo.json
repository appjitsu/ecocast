{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "ANALYZE",
    "CI",
    "NODE_ENV",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_API_URL",
    "DATABASE_HOST",
    "DATABASE_PORT",
    "DATABASE_USER",
    "DATABASE_PASSWORD",
    "DATABASE_NAME",
    "DATABASE_SYNC",
    "DATABASE_AUTOLOAD",
    "DATABASE_LOGGING",
    "PROFILE_API_KEY",
    "JWT_SECRET",
    "JWT_TOKEN_AUDIENCE",
    "JWT_TOKEN_ISSUER",
    "JWT_ACCESS_TOKEN_TTL",
    "JWT_REFRESH_TOKEN_TTL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "PORT",
    "HOST"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".next/types/**",
        "dist/**",
        "public/**",
        "out/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": ["eslint-results.json"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx",
        "**/*.spec.ts",
        "**/*.test.ts",
        "jest.config.*",
        "vitest.config.*"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": ["tsconfig.json", ".env*"]
}
